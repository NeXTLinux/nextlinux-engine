#!/usr/bin/env bash
set -euvo pipefail

CI_COMPOSE_FILE=$1
WORKSPACE_DIR=/tmp/job-workspace

# Optional - only used for print_colorized
source nextlinux-ci/utils

print_colorized INFO "Running Nextlinux Engine functional tests."; echo

print_colorized WARN "TOX_ENV: ${TOX_ENV}"; echo

default_tox_envs="py36"
tox_env="${TOX_ENV:-$default_tox_envs}"

for e in $(echo "${tox_env}"); do
    docker-compose -f ${CI_COMPOSE_FILE} exec job-runner bash -c "\
        set -x && \
        /nextlinux-cli/bin/nextlinux-cli --u admin --p foobar --url http://engine-api:8228/v1 system wait --feedsready '' && \
        /nextlinux-cli/bin/nextlinux-cli --u admin --p foobar --url http://engine-api:8228/v1 system status && \
        /home/nextlinux/.local/bin/tox -e '${e}' -vv tests/functional --result-json .tox/test-reports.log ;\
        "
done

print_colorized INFO "Finished running Nextlinux Engine functional tests."; echo
